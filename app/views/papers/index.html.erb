<p id="notice"><%= notice %></p>

<p>
  <strong>مقالاتك المنشورة</strong>
</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Created at</th>
      <th>Abstract</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @papers.each do |paper| %>
      <tr>
        <td><%= paper.title %></td>
        <td><%= paper.created_at %></td>
        <td><%= paper.abstract.html_safe if !paper.abstract.nil? %></td>
        <td><%= paper.state %></td>
        <td><%= link_to 'Show', [@researcher,paper] %></td>
        <td><%= link_to 'Delete', [@researcher,paper], method: :delete %></td>
      </tr>
    <% end %>    
  </tbody>
</table>
<%= paginate @papers %>
<br>
<%= link_to 'New paper', new_researcher_paper_path(@researcher) %>